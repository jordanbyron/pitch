= form_for proposal do |f|
  .row
    .span3
      #sidebar
        .well.well-small
          %table.table.table-condensed
            %thead
              %tr
                %td Proposal #
                %th.align-right= proposal.number
            %tbody
              %tr
                %td{colspan: 2}= proposal.customer_name
              %tr
                %td Subtotal
                %th.align-right $0.00
              %tr
                %td Tax
                %th.align-right $0.00
              %tr
                %td Total
                %th.align-right $0.00
        .btn-group.pull-left
          = f.submit "Save", class: 'btn btn-primary btn-small'

        .btn-group.pull-right
          %a.btn.btn-small.dropdown-toggle{data: {toggle:"dropdown"}, href: "#"}
            %i.icon-cog
          %ul.dropdown-menu
            %li
              = link_to "Delete", proposal_path(proposal),
            data: { confirm: "Are you sure you wish to delete this proposal?" },
            method: 'delete'
    .span9
      %ul#list.unstyled
