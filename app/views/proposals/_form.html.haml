= form_for proposal do |f|
  .row
    .span3
      #sidebar
        .well.well-small
          %table.table.table-condensed
            %thead
              %tr
                %td Proposal #
                %th.align-right= proposal.number
            %tbody
              %tr
                %td{colspan: 2}= proposal.customer_name
              %tr
                %td Subtotal
                %th.align-right $0.00
              %tr
                %td Tax
                %th.align-right $0.00
              %tr
                %td Total
                %th.align-right $0.00
        .btn-group.pull-left
          = f.submit "Save", class: 'btn btn-primary btn-small'
          = proposal.add_row_button(f)
          = proposal.add_group_button(f)
        %small.pull-right.delete
          = link_to "Delete", proposal_path(proposal),
            data: { confirm: "Are you sure you wish to delete this proposal?" },
            method: 'delete', class: 'text-error'
    .span9
      %ul#list.unstyled
        = proposal.render_items(f)
